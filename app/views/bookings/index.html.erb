<h1> Wizard Renter </h1>
<h2> Here are our bookings! </h2>
<h2>
  <%= link_to "Rent a game !", new_path, class:"btn btn-primary"%>
</h2>
<div class="container">
  <div class="cards my-3">
    <% @bookings.each do |b| %>

      <%= link_to booking_path(b) do %>
        <div class="card-trip">
          <%= image_tag b.game.image_url%>
          <div class="card-trip-infos">
            <div>
              <%= b.game.name %>
              <%= b.start_date %>
              <%= b.end_date %>
            </div>

          </div>
        </div>
      <% end %>
    <% end %>

    <h2>
    <%= link_to "Go to Home", root_path, class:"btn btn-primary"%>
    </h2>
  </div>
</div>
