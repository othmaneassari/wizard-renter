<%= simple_form_for [@game] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :age_range %>
  <%= f.number_field :age_range %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>
