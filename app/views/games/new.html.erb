<%= simple_form_for [@game] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :age_range %>
  <%= f.number_field :age_range %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <%= f.submit %>
<% end %>
<%= link_to "Go back to games list", games_path, class:"btn btn-primary" %>
